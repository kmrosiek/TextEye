<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckedTextView
            android:id="@+id/english_word_from_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/list_settings_selector"
            android:padding="12dp"
            android:text="Example chc"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            >

            <ImageView
                android:id="@+id/deck_set_translated_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:src="@drawable/ic_check_green_36dp" />

            <ImageView
                android:id="@+id/deck_set_flashcard_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                tools:src="@drawable/ic_settings_gray_36dp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>